{
type TyVar = String
type Var   = String
}
-------------------------------------------------------------------------------
-- Syntax
-------------------------------------------------------------------------------

DATA Tm
  | Var    x  : {Var}
  | Lam    x  : {Var}   ty : Ty t1 : Tm
  | App    t1 : Tm      t2 : Tm
  | Let    x  : {Var}   t1 : Tm t2 : Tm
  | TyLam  a  : {TyVar} t1 : Tm
  | TyApp  t1 : Tm      ty : Ty

DERIVING Tm: Show, Eq

DATA Ty
  | TyVar   a   : {TyVar}
  | Arr     ty1 : Ty      ty2 : Ty
  | Forall  a   : {TyVar} ty1 : Ty

DERIVING Ty: Show, Eq
