imports
{
import CCO.SourcePos
}

{
type TyVar  = String
type Var    = String
type Point  = Int
type AnnVar = String
}
-------------------------------------------------------------------------------
-- Syntax
-------------------------------------------------------------------------------

DATA Tm
  | Var    x  : {Var}
  | Lam    x  : {Var}   t1 : Tm
  | App    t1 : Tm      t2 : Tm
  | Let    x  : {Var}   t1 : Tm t2 : Tm

DERIVING Tm: Show, Eq


DATA TyScheme
  | Ty     ty : Ty
  | Forall a  : {TyVar} ts : TyScheme

DERIVING TyScheme: Show, Eq


DATA Ty
  | TyVar a   : {TyVar}
  | Arr   ty1 : Ty ty2 : Ty ann : {SAnn}
  | Nat
  | Bool

DERIVING Ty: Show, Eq


DATA SAnn
  | Singleton p : {Point}
  | Union s1 : SAnn  s2 : SAnn
  | Empty
  | AnnVar var : {AnnVar}

DERIVING SAnn: Show, Eq
